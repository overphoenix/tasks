{
    "tasks": {},
    "defaultTask": "copy",
    "units": {
        "src": {
            "units": {
                "jssrc": {
                    "description": "JavaScript codebase",
                    "src": "src/**/*.js",
                    "dst": "lib",
                    "task": "transpile"
                },
                "tssrc": {
                    "description": "TypeScript codebase",
                    "src": [
                        "src/**/*.ts",
                        "!src/**/*.d.ts"
                    ],
                    "dst": "lib",
                    "task": "tsc"
                },
                "assets": {
                    "description": "Assets",
                    "task": "copy",
                    "src": [
                        "src/**/*",
                        "!src/**/*.js",
                        "!src/**/*.ts",
                        "!src/**/*.d.ts"
                    ],
                    "dst": "lib"
                }
            }
        }
    }
}